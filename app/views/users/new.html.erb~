<%= form_for @user do |f| %>
  <div>
    <%= f.label :username %></br>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :password %></br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit %>
  </div>
