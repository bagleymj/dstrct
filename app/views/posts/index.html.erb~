<% column = 0 %>
<% @posts.each do |post| %>
  <% column += 1 %>
  <% if column == 1 %>
    <div>
  <% end %>
  <% if column == 5 %>
    <div class="lastpost">
  <% else %>
    <div class="post">
  <% end %>
    <h2><%= post.title %></h2>
    <h4>
      <%= post.user.username %> | 
      <%= link_to "-", vote_down_path(post.id), method: :put %>
      (<%= post.user.score %>)
      <%= link_to "+", vote_up_path(post.id), method: :put %>
    </h4>
    <h5><%= time_ago_in_words(post.created_at) %> ago</h5>
    <p><%= post.content %></p>
    <p><%= column %></p>
  </div>
  <% if column == 5 %>
    </div>
  <% end %>
  <% column = 0 if column == 5  %>
<% end %>
<% if column != 0 %>
  </div>
<% end %>
<div>
  <%= link_to "Submit New Post", action: :new %>
</div>
