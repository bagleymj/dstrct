<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<% column = 0 %>
<% @posts.each do |post| %>
  <% column += 1 %>
  <% if column == 1 %>
    <div>
  <% end %>
  <div class="post">
    <h2><%= post.title %></h2>
    <h4>
      <%= link_to post.user.username, user_path(post.user.id) %> | 
      <%= link_to "-", vote_down_path(post.id), method: :put if post.user != current_user %>
      (<%= post.user.score %>)
      <%= link_to "+", vote_up_path(post.id), method: :put if post.user != current_user %>
    </h4>
    <h5 class="countdown">
      <%= javascript_tag do %>
        var count = 1000;
        count;
      <% end %>
    </h5>

    <p><%= post.content %></p>
  </div>
  <% if column == 5 %>
    </div>
  <% end %>
  <% column = 0 if column == 5  %>
<% end %>
<% if column != 0 %>
  </div>
<% end %>
