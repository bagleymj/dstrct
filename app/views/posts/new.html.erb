<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :lifespan %><br/>
    <%= f.text_field :lifespan %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
