<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
<% column = 0 %>
<% @posts.each do |post| %>
  <% column += 1 %>
  <% if column == 1 %>
    <div>
  <% end %>
  <div class="post">
    <h2><%= post.title %></h2>
    <h4>
      <%= link_to post.user.username, user_path(post.user.id) %> | 
      <%= link_to "-", vote_down_path(post.id), method: :put if post.user != current_user %>
      (<%= post.user.score %>)
      <%= link_to "+", vote_up_path(post.id), method: :put if post.user != current_user %>
    </h4>
    <h5><%= time_ago_in_words(post.created_at) %> ago</h5>
    <p><%= post.content %></p>
    <p>lifespan: <%= post.lifespan %></p>
    <p>self destructing in: <%= distance_of_time_in_words(Time.now, post.destruct_at, include_seconds: true) %></p>
    <p>post score: <%= post.score %></p>
  </div>
  <% if column == 5 %>
    </div>
  <% end %>
  <% column = 0 if column == 5  %>
<% end %>
<% if column != 0 %>
  </div>
<% end %>
<div>
  <%= link_to "Submit New Post", action: :new %>
</div>
